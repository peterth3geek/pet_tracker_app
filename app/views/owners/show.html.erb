
<div class="column side">
<table class="center">
<tr>
<h1 class="big-header"><%= @owner.name %></h1>
</tr>
<tr>
<p><% if @owner.image.attachment %>
  <%= image_tag @owner.image, style: 'height:auto;width:300px;' %>
  <% else %>
  There's no image.
  <% end %>
</p>
</tr>
<tr>
<% if @owner.bio == nil %>
<%= link_to '<button type="button">Update your Bio!</button>'.html_safe, edit_owner_path(@owner) %>
<% else %>
<p><%= @owner.bio %></p>
<% end %>
</tr>
</table>
<%= link_to '<button type="button">Edit Profile!</button>'.html_safe, edit_owner_path %><br>
<%= link_to '<button type="button">Add A Pet!</button>'.html_safe, new_pet_path %> <%= link_to '<button type="button">Add a Partner!</button>'.html_safe, new_relationship_path %>
</div>

<div class="column middle">
<table class="feed">
  <tr>
  <% if @owner.display_most_recent == ["No Activity Yet!"] || @owner.display_most_recent == "No Activity Yet!"%>
  <p>"No Activity Yet!"</p>
  <% else %>
  <td onclick="location.href='<%= pet_path(@owner.living_method.pet) %>'"><%= @owner.living_method.pet.name %> <%= @owner.recent_activity(@owner.living_method) %> at <%= @owner.living_method.logged_time %></td>
  <% end %>
</tr>
</table>

<br>
<% if @owner.appointments.empty? %>
<%= link_to "Schedule Appointments", new_appointment_path %>
<% elsif @owner.appointments.last.logged_time < Time.now.strftime("%I:%M %P on %m/%d/%Y")  %>
<% else %>
<h3>Upcoming Appointments:</h3>
<%= @owner.appointments.last.logged_time %>
<% end %>
<br>
<br>
<% if @owner.pets.empty? %>
<%= link_to '<button type="button">Add A Pet!</button>'.html_safe, new_pet_path %>
<% else %>

<table class="cool">
  <h1 class="big-header">My Pets!</h1>
  <tr><td></td><td></td><td></td></tr>
  <% @owner.pets.each do |pet| %>
    <tr onclick="location.href='<%= pet_path(pet) %>'"><td><%=pet.name%></td> <td><%= pet.recent_activity(pet.most_recent)%></td><td> <%= pet.most_recent == "No Activity Yet!" ? "" : "at #{pet.most_recent.logged_time}" %></td></tr>
  <% end %>
</table>
<% end %>

</div>
