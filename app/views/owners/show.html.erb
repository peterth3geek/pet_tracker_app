
<div class="column side">
<table class="center">
<tr><td>
<h2 class="big-header"><%= @owner.name %></h2>
</td></tr>
<tr><td>
<p class="important"><% if @owner.image.attachment %>
  <%= image_tag @owner.image, style: 'height:auto;width:100%;' %>
  <% else %>
  There's no image.
  <% end %>
</p>
</td></tr>
<tr><td class="important">
<% if @owner.bio == nil %>
<%= link_to '<button type="button">Update your profile!</button>'.html_safe, edit_owner_path(@owner) %>

<% else %>
<p><%= @owner.bio %></p>
<% end %>
</td></tr>
</table>

<% if @owner.id == session[:owner_id] %>
<table>
<tr><%= button_to "Add a Pet!", new_pet_path, method: :get, class: "btn btn-outline-primary" %> <%= button_to "Edit Profile!", edit_owner_path, method: :get, class: "btn btn-outline-success" %> <%= button_to "Add Partner!", new_relationship_path, method: :get, class: "btn btn-outline-info" %></tr>
</table>
<% end %>
</div>


<div class="column middle">
  <h3 class="mid-header">Recent Activity</h3>
<table class="feed">
  <tr>
  <% if @owner.display_most_recent == ["No Activity Yet!"] || @owner.display_most_recent == "No Activity Yet!"%>
  <p>"No Activity Yet!"</p>
  <% else %>
  <td onclick="location.href='<%= pet_path(@owner.living_method.pet) %>'"><%= @owner.living_method.pet.name %> <%= @owner.recent_activity(@owner.living_method) %> at <%= @owner.living_method.logged_time %></td>
  <% end %>
</tr>
</table>

<br>
<% if @owner.appointments.empty? %>
<%= link_to "Schedule Appointments", new_appointment_path %>
<% elsif @owner.appointments.last.logged_time > Time.now.strftime("%I:%M %P on %m/%d/%Y")  %>
<% else %>
<div class="mid-header">
<h3>Upcoming Appointments:</h3>
</div>
<table class="feed">
  <tr>
  <td onclick="location.href='<%= appointment_path(@owner.appointments.last)%>'">
<%= @owner.appointments.last.logged_time %>
</td></tr></table>
<% end %>
<br>
<br>
<% if @owner.pets.empty? %>
<%= link_to '<button type="button">Add A Pet!</button>'.html_safe, new_pet_path %>
<% else %>

<table class="cool">
  <tr><p class="big-header">My Pets!</p></tr>
  <% @owner.pets.each do |pet| %>
    <tr onclick="location.href='<%= pet_path(pet) %>'"><td><%=pet.name%></td> <td><%= pet.recent_activity(pet.most_recent)%></td><td> <%= pet.most_recent == "No Activity Yet!" ? "" : "at #{pet.most_recent.logged_time}" %></td></tr>
  <% end %>
</table>
<% end %>
</div>


<div class="column side">
  <h3 class="mid-header"> All Activity</h3>
  <table class="all-feed">
  <% @owner.sorted_all_feed.each do |activity| %>
  <% if activity.class == Waste %>
    <tr onclick="location.href='<%= waste_path(activity) %>'">
  <% elsif activity.class == Play%>
    <tr onclick="location.href='<%= play_path(activity) %>'">
  <% elsif activity.class == Food%>
    <tr onclick="location.href='<%= food_path(activity) %>'">
  <% elsif activity.class == Appointment%>
    <tr onclick="location.href='<%= appointment_path(activity) %>'">
  <% end %>
    <td><%= activity.pet.name %></td> <td><%=activity.pet.recent_activity(activity)%></td><td><%= activity.logged_time %></td>
  </tr>
  <% end %>
</table>

</div>
