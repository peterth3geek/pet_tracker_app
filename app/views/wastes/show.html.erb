<div class="card text-center shows">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <%= link_to 'Go Back', request.headers['HTTP_REFERER'] %>
      </li>
      <li class="nav-item">
        <%= link_to @waste.pet.name, pet_path(@waste.pet), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to @waste.owner.name, owner_path(@waste.owner), class: "nav-link" %>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <h5 class="card-title logo-font-form text-primary"><%= @waste.pet.name %>'s cleaning with <%=@waste.owner.name%> at <%= @waste.logged_time %></h5>
    <p class="card-text"><%= @waste.notes %></p>
    <%= link_to "Edit Waste", edit_waste_path(@waste), class: "btn btn-outline-warning", method: :get %>

    <%= link_to "Delete Waste", @waste, class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure you want to delete this Waste?"} %>
  </div>
</div>
