<div class="container">
<div class="card">
  <div class="card-header logo-font-form text-primary">
Edit Relationship
</div>
<div class="card-body">
<%= form_for @relationship do |f| %>
  <%= f.label :owner_id, "Select User to Edit: " %>
  <%= f.collection_select :owner_id, user_pet_relations, :id, :name %><br/>
  <div class="form-group">
  <%= f.label :title, "Change User's Title: " %>
  <%= f.text_field :title, class: "form-control" %>
</div>
  <%= f.submit "Edit Relationship", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
