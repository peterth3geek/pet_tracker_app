
<div class="card text-center shows">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <%= link_to 'Go Back', request.headers['HTTP_REFERER'] %>
      </li>
      <li class="nav-item">
        <%= link_to "#{current_user.name}", owner_path(current_user), class: "nav-link" %>
      </li>
    </ul>
    <div class="card-header logo-font-form text-primary">
    New Activity
  </div>
  </div>
  <div class="card-body">
    <%= form_for @play do |f| %>
    <%= f.label :time %><br>
    <%= f.datetime_select :time, ampm: true, default: Time.zone.now, start_year: Time.zone.now.year, order: [:month, :day, :year] %><br/>
      <%= f.label :notes %><br>
      <%= f.text_area :notes %><br>
      <%= f.label "Pet" %>
      <%= f.collection_select :pet_id, current_user.pets, :id, :name %><br/>
      <%= f.hidden_field :owner_id, value: current_user.id %>
      <%= f.submit "Create New Appointment", class: "btn btn-primary" %>      <br>
    <% end %>

</div>
