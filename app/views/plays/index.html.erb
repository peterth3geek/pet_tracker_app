<ul>
  <% current_user.pets.each do |pet| %>
    <li><%= link_to pet.name, pet %></li>
    Play Activities:
    <ul><% if pet.plays.count > 0 %>
      <% pet.plays.each do |play| %>
        <li><%= play.notes %></li>
      <% end %></ul>
      <% else %>
      <p>This pet has not played!</p>
      <% end %>
    <% end %>
</ul>
