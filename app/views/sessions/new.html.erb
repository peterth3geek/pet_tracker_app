<div class="container">
<div class="card">
  <div class="card-header">
    <h1>Login</h1>
  </div>
  <div class="card-body">
<%= form_tag sessions_path do %>
<div class="form-group">
  <%= label_tag "Username" %>
  <%= text_field_tag :name %>
</div>
<div class="form-group">
  <%= label_tag "Password" %>
  <%= password_field_tag :password %>
</div>
  <%= submit_tag "Log in", class: "btn btn-primary" %>
<% end %>
</div>
</div>
